<%= form_for @order, url: orders_create_path, method: :post do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <p><big>Please fix <%= pluralize(@order.errors.count, 'error') %> with your order:</big></p>
      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset id='new-order-fieldset'>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :street %>
      <%= f.text_field :street, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :postal %>
      <%= f.text_field :postal, class: 'form-control', maxlength: 10 %>
    </div>
    <div class="form-group">
      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.text_field :quantity, class: 'form-control' %>
    </div>
  </fieldset>

  <fieldset id='new-order-comment-fieldset'>
    <%= f.fields_for :comment do |comment_f| %>
      <div class="form-group">
        <%= comment_f.label :body, 'Comment (optional)' %>
        <%= comment_f.text_area :body, class: 'form-control' %>
      </div>    
    <% end %>    
  </fieldset>

  <div class="voffset20"></div>

  <div class="form-group">
    <%= f.submit value: 'Place Order', class: 'btn btn-success shadow' %>
  </div>
<% end %>